@model List<ResultProductDto>
<div class="container-fluid py-5">
    <h2 class="section-title position-relative text-uppercase mx-xl-5 mb-4"><span class="bg-secondary pr-3">You May Also Like</span></h2>
    <div class="row px-xl-5">
        <div class="col">
            <div class="owl-carousel related-carousel">
                @foreach(var item in Model)
                {
                    <div class="product-item bg-light">
                        <div class="product-img position-relative overflow-hidden">
                            <img class="img-fluid w-100" src="@item.ProductImageUrl" alt="@item.ProductName">
                            <div class="product-action">
                                <a class="btn btn-outline-dark btn-square" href=""><i class="fa fa-shopping-cart"></i></a>
                                <a class="btn btn-outline-dark btn-square" href=""><i class="far fa-heart"></i></a>
                                <a class="btn btn-outline-dark btn-square" href=""><i class="fa fa-sync-alt"></i></a>
                                <a class="btn btn-outline-dark btn-square" asp-area="" asp-controller="ProductList" asp-action="ProductDetail" asp-route-productId="@item.ProductId"><i class="fa fa-search"></i></a>
                            </div>
                        </div>
                        <div class="text-center py-4">
                            <a class="h6 text-decoration-none text-truncate" asp-area="" asp-controller="ProductList" asp-action="ProductDetail" asp-route-productId="@item.ProductId">@item.ProductName</a>
                            <div class="d-flex align-items-center justify-content-center mt-2">
                                @if (item.ProductDiscountedPrice != null && item.ProductDiscountedPrice < item.ProductPrice)
                                {
                                    <h5>@item.ProductDiscountedPrice</h5>
                                    <h6 class="text-muted ml-2"><del>@item.ProductPrice</del></h6>
                                }
                                else
                                {
                                    <h5>@item.ProductPrice</h5>
                                }
                            </div>

                            <div class="d-flex align-items-center justify-content-center mb-1">
                                <small class="fa fa-star text-primary mr-1"></small>
                                <small class="fa fa-star text-primary mr-1"></small>
                                <small class="fa fa-star text-primary mr-1"></small>
                                <small class="fa fa-star text-primary mr-1"></small>
                                <small class="fa fa-star text-primary mr-1"></small>
                                <small>(99)</small>
                            </div>
                        </div>
                    </div>
                } 
            </div>
        </div>
    </div>
</div>