@model UpdateCommentDto
<section class="content-header">
    <h1>Update Comment</h1>
    <ol class="breadcrumb">
        <li><a asp-controller="Home" asp-action="Index"><i class="fa fa-home"></i> Home</a></li>
        <li><a asp-controller="Comment" asp-action="Index"><i class="fa fa-envelope-o"></i> Comment</a></li>
        <li class="active"><i class="fa fa-envelope"></i> Update Comment</li>
    </ol>
</section>

<div class="col-md-12">
    <div class="chart-box">
        <h4>Update Comment</h4>
        <form method="post" asp-action="UpdateComment">
            <div class="form-group">
                <input type="hidden" class="form-control" asp-for="UserCommentId">
            </div>
            <div class="form-group">
                <input type="hidden" class="form-control" asp-for="ProductId">
            </div>
            <div class="form-group">
                <label asp-for="FullName">Full Name</label>
                <input type="text" class="form-control" asp-for="FullName" >
            </div>
            <div class="form-group">
                <label asp-for="Email">Email</label>
                <input type="text" class="form-control" asp-for="Email" >
            </div>
            <div class="form-group">
                <label asp-for="CommentContent">Comment Content</label>
              <textarea asp-for="CommentContent" class="form-control"></textarea>
            </div>
             <div class="form-group">
                <label asp-for="CreatedAt">Created At :</label>
                <input type="datetime-local" asp-for="CreatedAt" >
            </div>
            <div class="form-group">
            <label asp-for="Rating">Rating</label>
            <select asp-for="Rating">
                <option value="1">1 Star</option>
                <option value="2">2 Star</option>
                <option value="3">3 Star</option>
                <option value="4">4 Star</option>
                    <option value="5">5 Star</option>
            </select>
            </div>
            <div class="col-md-4">
                <fieldset class="form-group">
                    <label class="form-label">Is Comment Will be Active?:</label>
                    <div class="form-check">
                        <input class="form-check-input" type="radio" asp-for="CommentStatus" value="true">
                        <label class="form-check-label">True</label>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="radio" asp-for="CommentStatus" value="false">
                        <label class="form-check-label">False</label>
                    </div>

                </fieldset>
             </div>
            <button type="submit" class="btn btn-default">Submit</button>
        </form>
    </div>
</div>