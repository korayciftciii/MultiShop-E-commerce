@model CreateProductDto
<section class="content-header">
    <h1>Create Product</h1>
    <ol class="breadcrumb">
        <li><a asp-controller="Home" asp-action="Index"><i class="fa fa-home"></i> Home</a></li>
        <li><a asp-controller="Product" asp-action="Index"><i class="fa fa-home"></i> Products</a></li>
        <li class="active"><i class="fa fa-bars"></i> New Product</li>
    </ol>
</section>



<div class="col-md-12">
    <div class="chart-box">
        <h4>New Products</h4>
        <div class="row">
            <form asp-action="NewProduct" method="post">
            <div class="col-md-4">
                <fieldset class="form-group">
                    <label asp-for="ProductName">Product Name</label>
                    <input class="form-control" asp-for="ProductName" type="text">
                </fieldset>
            </div>
                <div class="col-md-4">
                    <fieldset class="form-group">
                        <label asp-for="CreationDate">Creation Date:</label>
                        <input type="datetime-local" value="@DateTime.Now" asp-for="CreationDate" >
                    </fieldset>
                </div>
            <div class="col-md-4">
                <fieldset class="form-group">
                    <label asp-for="ProductPrice">Product Price</label>
                    <input class="form-control" asp-for="ProductPrice" type="text">
                </fieldset>
            </div>
                <div class="col-md-4">
                    <fieldset class="form-group">
                        <label asp-for="ProductDiscountedPrice">Discounted Price Price</label>
                        <input class="form-control" asp-for="ProductDiscountedPrice" type="text">
                    </fieldset>
                </div>
            <div class="col-md-4">
                <fieldset class="form-group">
                    <label asp-for="ProductImageUrl">Image Url</label>
                    <input asp-for="ProductImageUrl" class="form-control" type="text">
                </fieldset>
            </div>
            <div class="col-md-4">
                <fieldset class="form-group">
                    <label asp-for="ProductDescription" >Product Description</label>
                   <textarea class="form-control" asp-for="ProductDescription"></textarea>
                </fieldset>
            </div>
            <div class="col-md-4">
                <fieldset class="form-group">
                        <label asp-for="CategoryId" class="font-weight-bold">Categories</label>
                    <select asp-for="CategoryId" asp-items="@ViewBag.Categories" class="form-control" required>
                        <option value="">Please Choose a category </option>
                        </select>
                </fieldset>
            </div>
                <button type="submit" class="btn btn-default">Submit</button>
            </form>
        </div>
    </div>
</div>

