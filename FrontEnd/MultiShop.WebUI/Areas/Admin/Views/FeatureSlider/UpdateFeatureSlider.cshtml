@model UpdateFeatureSliderDto
<section class="content-header">
    <h1>Create Slider</h1>
    <ol class="breadcrumb">
        <li><a asp-controller="Home" asp-action="Index"><i class="fa fa-home"></i> Home</a></li>
        <li><a asp-controller="FeatureSlider" asp-action="Index"><i class="fa fa-home"></i> Feature Slider</a></li>
        <li class="active"><i class="fa fa-bars"></i> Update Slider</li>
    </ol>
</section>



<div class="col-md-12">
    <div class="chart-box">
        <h4>Update Slider</h4>
        <div class="row">
            <form asp-action="UpdateFeatureSlider" method="post">
                <input class="form-control" asp-for="SliderId" type="hidden">
                <div class="col-md-4">
                    <fieldset class="form-group">
                        <label asp-for="Title">Slider Title</label>
                        <input class="form-control" asp-for="Title" type="text">
                    </fieldset>
                </div>
                <div class="col-md-4">
                    <fieldset class="form-group">
                        <label asp-for="Description">Slider Description</label>
                        <input class="form-control" asp-for="Description" type="text">
                    </fieldset>
                </div>
                <div class="col-md-4">
                    <fieldset class="form-group">
                        <label asp-for="ImageUrl">Image Url</label>
                        <input asp-for="ImageUrl" class="form-control" type="text">
                    </fieldset>
                </div>
                <div class="col-md-4">
                    <label class="form-label">Is slider Will be Active?:</label>
                    <div class="form-check">
                        <input class="form-check-input" type="radio" asp-for="Status" value="true">
                        <label class="form-check-label">True</label>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="radio" asp-for="Status" value="false">
                        <label class="form-check-label">False</label>
                    </div>
                </div>
                <button type="submit" class="btn btn-default">Submit</button>
            </form>
        </div>
    </div>
</div>

