@model List<ResultSerivceCardDto>
@{
    int count = 0;
}
<section class="content-header">
    <h1>Service Cards</h1>
    <ol class="breadcrumb">
        <li><a asp-controller="Home" asp-action="Index"><i class="fa fa-home"></i> Home</a></li>
        <li class="active"><i class="fa fa-bars"></i> Service Cards</li>
    </ol>
</section>
<section class="content container-fluid">
    <div class="row">
        <div class="col-md-12">
            <div class="chart-box">
                <h4>Cards</h4>
                <a asp-controller="ServiceCard" asp-action="NewServiceCard" class="btn btn-info">New Service Card</a>
                <div id="example_filter" class="dataTables_filter pull-right">
                    <input class="form-control" id="placeholderInput" placeholder="Search" type="email">
                </div>
                <table class="table table-responsive">
                    <thead>
                        <tr>
                            <th class="sortable">#</th>
                            <th class="sortable">Card Title</th>
                            <th class="sortable">Card Icon</th>
                            <th>Delete</th>
                            <th>Update</th>
                        </tr>
                    </thead>
                    @foreach (var item in Model)
                    {
                        count++;
                        <tr>
                            <td class="text-truncate">@count</td>
                            <td class="text-truncate">@item.Title</td>
                            <td class="text-truncate">@item.Icon</td>
                            <td><a asp-controller="ServiceCard" asp-action="DeleteServiceCard" asp-route-servicecardId="@item.FeatureId" class="btn btn-danger">Delete</a></td>
                            <td><a asp-controller="ServiceCard" asp-action="UpdateServiceCard" asp-route-servicecardId="@item.FeatureId" class="btn btn-warning">Update</a></td>
                        </tr>
                    }
                </table>
                <ul class="pagination m-bot-0">
                    <li> <a href="#" aria-label="Previous"> <span aria-hidden="true">«</span> </a> </li>
                    <li><a href="#">1</a></li>
                    <li><a href="#">2</a></li>
                    <li><a href="#">3</a></li>
                    <li><a href="#">4</a></li>
                    <li><a href="#">5</a></li>
                    <li> <a href="#" aria-label="Next"> <span aria-hidden="true">»</span> </a> </li>
                </ul>
            </div>
        </div>
    </div>
</section>