@model UpdateContactDto
<section class="content-header">
    <h1>Update Contact</h1>
    <ol class="breadcrumb">
        <li><a asp-controller="Home" asp-action="Index"><i class="fa fa-home"></i> Home</a></li>
        <li><a asp-controller="Contact" asp-action="Index"><i class="fa fa-envelope-o"></i> Contact</a></li>
        <li class="active"><i class="fa fa-envelope"></i> Update Contact</li>
    </ol>
</section>

<div class="col-md-12">
    <div class="chart-box">
        <h4>Update Contact</h4>
        <form method="post" asp-action="UpdateContact">
            <div class="form-group">
                <input type="hidden" class="form-control" asp-for="ContactId">
            </div>
            <div class="form-group">
                <label asp-for="FullName">Full Name</label>
                <input type="text" class="form-control" asp-for="FullName">
            </div>
            <div class="form-group">
                <label asp-for="Email">Email</label>
                <input type="text" class="form-control" asp-for="Email">
            </div>
            <div class="form-group">
                <label asp-for="Subject">Subject</label>
                <input type="text" class="form-control" asp-for="Subject">
            </div>
            <div class="form-group">
                <label asp-for="Content">Message Content</label>
                <textarea asp-for="Content" class="form-control"></textarea>
            </div>
            <div class="form-group">
                <label asp-for="createdAt">Created At :</label>
                <input type="datetime-local" asp-for="createdAt">
            </div>
            <div class="col-md-4">
                <fieldset class="form-group">
                    <label class="form-label">Is Message read?:</label>
                    <div class="form-check">
                        <input class="form-check-input" type="radio" asp-for="IsRead" value="true">
                        <label class="form-check-label">True</label>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="radio" asp-for="IsRead" value="false">
                        <label class="form-check-label">False</label>
                    </div>

                </fieldset>
            </div>
            <button type="submit" class="btn btn-default">Submit</button>
        </form>
    </div>
</div>